{
  "title": "Fn sends left ctrl+space",
  "rules": [
    {
      "description": "Send key codes when Fn key is pressed",
      "manipulators": [
        {
          "description": "change input source on fn",
          "from": {
            "key_code": "fn"
          },
          "to": [
            {
              "key_code": "spacebar",
		"modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
